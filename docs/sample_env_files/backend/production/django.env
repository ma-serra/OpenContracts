# Core Django Security Settings
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_ADMIN_URL=admin/
DJANGO_SECURE_SSL_REDIRECT=true

# Django Username and Password for Initial Admin Login
DJANGO_SUPERUSER_PASSWORD=change-this-secure-password
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_USERNAME=admin

# General
USE_DOCKER=yes
WEB_CONCURRENCY=4
IPYTHONDIR=/app/.ipython
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_WORKER_TIMEOUT=3600

# Application Configuration
USE_ANALYZER=true
CALLBACK_ROOT_URL_FOR_ANALYZER=https://yourdomain.com

# AWS Configuration (optional - set USE_AWS=false if not using)
USE_AWS=true
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Redis
REDIS_URL=redis://redis:6379/0

# Database
DATABASE_URL=postgres://postgres_user:secure-postgres-password-change-this@postgres:5432/opencontracts
CONN_MAX_AGE=60

# Celery

# Flower
CELERY_FLOWER_USER=flower_user
CELERY_FLOWER_PASSWORD=secure-flower-password

# NLM Parser
NLM_INGESTOR_ACTIVE=true

# LLM SETTINGS
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# AUTH0 Configuration (optional - set USE_AUTH0=false if not using)
USE_AUTH0=false
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_API_AUDIENCE=https://yourdomain.com/api
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_M2M_MANAGEMENT_API_SECRET=your-m2m-secret
AUTH0_M2M_MANAGEMENT_API_ID=your-m2m-id
AUTH0_M2M_MANAGEMENT_GRANT_TYPE=client_credentials

# Docling
DOCLING_MODELS_PATH=/models/docling
SENTENCE_TRANSFORMER_MODELS_PATH=/models/sentence-transformers

# Email Configuration (optional)
DJANGO_DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DJANGO_SERVER_EMAIL=server@yourdomain.com
DJANGO_EMAIL_SUBJECT_PREFIX=[OpenContracts]

# Security Settings
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=true
DJANGO_SECURE_HSTS_PRELOAD=true
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=true

# User Limits Configuration
USAGE_CAPPED_USER_CORPUS_CAP_COUNT=10
USAGE_CAPPED_USER_CAN_USE_ANALYZERS=true
USAGE_CAPPED_USER_CAN_IMPORT_CORPUS=false
USAGE_CAPPED_USER_CAN_EXPORT_CORPUS=true

# API Keys (optional - set ALLOW_API_KEYS=true to enable)
ALLOW_API_KEYS=false

# Additional LLM Providers (optional)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# HF_TOKEN=your-huggingface-token
# HF_EMBEDDINGS_ENDPOINT=your-hf-endpoint

# S3 Advanced Configuration (optional)
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com
# S3_PREFIX=documents
# S3_COMPRESSION_LEVEL=6
# S3_DOCUMENT_PATH=open_contracts
