# Core Django Security Settings
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_ADMIN_URL=admin/
DJANGO_SECURE_SSL_REDIRECT=true

# Django Username and Password for Initial Admin Login
DJANGO_SUPERUSER_PASSWORD=change-this-secure-password
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_USERNAME=admin

# General
USE_DOCKER=yes
WEB_CONCURRENCY=4
IPYTHONDIR=/app/.ipython
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_WORKER_TIMEOUT=3600

# Application Configuration
USE_ANALYZER=true
CALLBACK_ROOT_URL_FOR_ANALYZER=https://yourdomain.com

# Storage Configuration - Choose ONE: LOCAL, AWS, or GCP
# ------------------------------------------------------------------------------
# Set STORAGE_BACKEND to one of: LOCAL, AWS, or GCP
STORAGE_BACKEND=LOCAL

# Option 1: LOCAL Storage (default)
# No additional configuration needed when STORAGE_BACKEND=LOCAL

# Option 2: AWS S3 Configuration (when STORAGE_BACKEND=AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Option 3: Google Cloud Storage Configuration (when STORAGE_BACKEND=GCP)
GS_BUCKET_NAME=your-gcs-bucket-name
GS_PROJECT_ID=your-gcp-project-id

# GCP Authentication Options:
# 1. For production with Workload Identity/Service Account attached to compute:
#    Leave GS_CREDENTIALS empty and ensure the service account has proper permissions
# 2. For local development or if using service account key file:
#    GS_CREDENTIALS=/path/to/service-account-key.json
# 3. Or use environment variable:
#    GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# GCP Security Settings
GS_QUERYSTRING_AUTH=true  # Use signed URLs for private files
GS_EXPIRATION_SECONDS=86400  # URL expiration time (1 day)
GS_FILE_OVERWRITE=false  # Don't overwrite existing files
GS_DEFAULT_ACL=  # Leave empty for private files, or set to 'publicRead' for public

# GCP Performance Settings
GS_MAX_MEMORY_SIZE=0  # No memory rollover limit
GS_BLOB_CHUNK_SIZE=2621440  # 2.5MB chunks for resumable uploads
GS_IS_GZIPPED=false  # Enable gzip compression for static files

# GCP Advanced Settings (optional)
# GS_CUSTOM_ENDPOINT=https://storage.googleapis.com
# GS_IAM_SIGN_BLOB=true  # Use IAM Sign Blob API for signed URLs (when not using key file)
# GS_SA_EMAIL=service-account@project.iam.gserviceaccount.com  # Override signing account
# GCS_DOCUMENT_PATH=open_contracts  # Document storage path within bucket

# Redis
REDIS_URL=redis://redis:6379/0

# Database
DATABASE_URL=postgres://postgres_user:secure-postgres-password-change-this@postgres:5432/opencontracts
CONN_MAX_AGE=60

# Celery

# Flower
CELERY_FLOWER_USER=flower_user
CELERY_FLOWER_PASSWORD=secure-flower-password

# NLM Parser
NLM_INGESTOR_ACTIVE=true

# LLM SETTINGS
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# AUTH0 Configuration (optional - set USE_AUTH0=false if not using)
USE_AUTH0=false
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_API_AUDIENCE=https://yourdomain.com/api
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_M2M_MANAGEMENT_API_SECRET=your-m2m-secret
AUTH0_M2M_MANAGEMENT_API_ID=your-m2m-id
AUTH0_M2M_MANAGEMENT_GRANT_TYPE=client_credentials

# Docling
DOCLING_MODELS_PATH=/models/docling
SENTENCE_TRANSFORMER_MODELS_PATH=/models/sentence-transformers

# Email Configuration (optional)
DJANGO_DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DJANGO_SERVER_EMAIL=server@yourdomain.com
DJANGO_EMAIL_SUBJECT_PREFIX=[OpenContracts]

# Security Settings
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=true
DJANGO_SECURE_HSTS_PRELOAD=true
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=true

# User Limits Configuration
USAGE_CAPPED_USER_CORPUS_CAP_COUNT=10
USAGE_CAPPED_USER_CAN_USE_ANALYZERS=true
USAGE_CAPPED_USER_CAN_IMPORT_CORPUS=false
USAGE_CAPPED_USER_CAN_EXPORT_CORPUS=true

# API Keys (optional - set ALLOW_API_KEYS=true to enable)
ALLOW_API_KEYS=false

# Additional LLM Providers (optional)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# HF_TOKEN=your-huggingface-token
# HF_EMBEDDINGS_ENDPOINT=your-hf-endpoint

# S3 Advanced Configuration (optional)
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com
# S3_PREFIX=documents
# S3_COMPRESSION_LEVEL=6
# S3_DOCUMENT_PATH=open_contracts
